<Window x:Class="MarketWPF.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketWPF"
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="CartListBox" DisplayMemberPath="Name" Height="350" Margin="10"/>
        <Button Name="RemoveButton" Content="Remove Selected Item" Margin="10" VerticalAlignment="Bottom" Click="RemoveButton_Click"/>
    </Grid>
</Window>
