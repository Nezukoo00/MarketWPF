<Window x:Class="MarketWPF.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketWPF"
        mc:Ignorable="d"
        Title="ProductDetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Image Name="ProductImage" Height="200" Margin="0,0,0,10"/>
            <TextBlock Name="ProductName" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Name="ProductQuantity" FontSize="14" Margin="0,0,0,10"/>
            <Button Content="Add to Cart" Click="AddToCartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
